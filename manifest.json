{
  "name": "yapma - zamanını boşa harcama",
  "author": "Furkan BAŞARAN",
  "short_name": "yapma",
  "description": "sosyal medya zaman kaybı önleyici",
  "version": "1.0.1",
  "permissions": [
    "*://*.facebook.com/*",
    "*://*.twitter.com/*",
    "*://*.instagram.com/*",
    "*://*.eksisozluk.com/*",
    "*://*.github.com/*"
  ],
  "manifest_version": 2,
  "icons": {
    "16": "assets/32-icon.png",
    "48": "assets/64-icon.png",
    "128": "assets/128-icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.twitter.com/*",
        "*://*.instagram.com/*",
        "*://*.eksisozluk.com/*",
        "*://*.github.com/*",
        "*://*.4chan.org/*",
        "*://*.reddit.com/*"
      ],
      "js": ["src/app.js"]
    }
  ],
  "web_accessible_resources": [
    "config/*.json"
  ],
  "offline_enabled": false
}
